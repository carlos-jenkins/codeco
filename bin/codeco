"""
codeco command line application.
"""

from argparse import ArgumentParser, ArgumentError
from os.path import isfile, isdir


def input_file(path):
    """
    'Type' for argparse - checks that file exists and open it for reading.
    """
    if not isfile(path):
        raise ArgumentError('{0} doesn\'t exist.'.format(path))
    return open(path, 'r')


def output_file(path):
    """
    'Type' for argparse - checks that file is not a directory and open it for
    writing.
    """
    if isdir(path):
        raise ArgumentError('{0} is a directory.'.format(path))
    return open(path, 'w')


def main():
    parser = ArgumentParser(
        description='codeco command line application.'
    )

    parser.add_argument(
        'code', type=input_file,
        help='path to code file.',
    )
    parser.add_argument(
        'annotations', type=input_file,
        help='path to annotations file.',
    )
    parser.add_argument(
        '-o', '--output', type=output_file,
        help='path to output file.',
        default=None,
    )
    parser.add_argument(
        '-t', '--template', type=input_file,
        help='path to template file.',
        default=None,
    )
    parser.add_argument(
        '-c', '--create', type=output_file,
        help='create a template file.',
        default=None,
    )

    args = parser.parse_args()
    print(args)


if __name__ == '__main__':
    main()
